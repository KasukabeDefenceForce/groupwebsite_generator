<html>
<head>
    <title> {{ general.website_title }} </title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
    <link rel="stylesheet" href="assets/css/main.css" />
    <link rel="stylesheet" href="assets/css/card.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
    <link rel="stylesheet" href="assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="assets/css/style.css">
</head>
  <body class="right-sidebar is-preload" style="overflow-x:hidden;">
    <div id="page-wrapper">
        <!-- Header -->
        <div id="header-wrapper">
            <div id="header" class="container">
                <!-- Nav -->
                <nav id="nav">
                    <ul>
                        <li>
                            {% for page in general["navigation_bar"] %}
                        <li>
                            <a href="{{ page_link(page) }}.html">{{ page }}</a>
                            {% if page in general %}
                            <ul>
                                {% for sub_page in general[page] %}
                                <li><a href="sub_research/{{ page_link(sub_page) }}.html">{{sub_page}}</a></li>
                                {% endfor %}
                            </ul>
                            {% endif %}
                        </li>
                        {% endfor %}
                        </li>
                    </ul>
                </nav>
            </div>
            <!-- Hero -->
            <section id="hero" class="container">
                <header>
                    <h2>About Section</h2>
                </header>
            </section>
        </div>
        <!-- investigator,post_doc,grad_students,undergrads -->
        {% for category in [investigator, post_docs,grads, undergrads, post_grads] %}
        <div class="row">
            <section class="col-6 col-12-narrower feature">
                <header>
                    <h2> {{ category[0]['category'] }} </h2>
                </header>
            </section>
        </div>
        <div class="wrapper">
            <div class="container" id="main">
                <article id="content">
                    <div class="row">
                        {% for person in category %}
                        {% if person['end_year'] == "None" %}
                        <div class="column">
                            <div class="card">
                                <img src="{{ person.image_path }}" style="width:100%">
                                <h1><a href="members/{{page_link(person.name) }}.html">{{ person.name }}</a></h1>
                                <p> {{ person.myrole }} </p>
                                <p> {{ person.project_title }} </p>
                                <h6> {{ person.university }} </h6>
                                {% if person['website'] != "None" %}
                                <a href="{{ person.website }}"><i class="fa fa-dribbble"></i></a>
                                {% endif %}
                                {% if person['twitter'] != "None" %}
                                <a href={{ person.twitter }}><i class="fa fa-twitter"></i></a>
                                {% endif %}
                                {% if person['linkedin'] != "None" %}
                                <a href={{ person.linkedin }}><i class="fa fa-linkedin"></i></a>
                                {% endif %}
                                {% if person['github'] != "None" %}
                                <a href={{ person['github'] }}><i class="fa fa-github"></i></a>
                                {% endif %}
                                {% if person['orcid'] != "None" %}
                                <a href={{ "https://orcid.org/" ~person['orcid'] }}><i class="fa fa-id-card-o"></i></a>
                                {% endif %}
                                <p><button></button></p>
                            </div>
                        </div>
                        {% endif %}
                        {% endfor %}
                    </div>
                </article>
            </div>
        </div>
        {% endfor %}
        <!-- End investigator,post_doc,grad_students,undergrads -->





        <div class="row">
            <section class="col-6 col-12-narrower feature">
                <header>
                    <h2> Alumni </h2>
                </header>
            </section>
        </div>
        <div class="wrapper">
            <div class="container" id="main">
                <article id="content">
                    <div class="row">
                        {% for category in [investigator, post_docs,grads, undergrads, post_grads] %}
                        {% for person in category %}
                        {% if person['end_year'] != "None" %}
                        <div class="column">
                            <div class="card">
                                <img src="{{ person.image_path }}" style="width:100%">
                                <h1><a href="members/{{page_link(person.name) }}.html">{{ person.name }}</a></h1>
                                <p> {{ person.myrole }} </p>
                                <p> {{ person.project_title }} </p>
                                <h6> {{ person.university }} </h6>
                                {% if person['website'] != "None" %}
                                <a href="{{ person.website }}"><i class="fa fa-dribbble"></i></a>
                                {% endif %}
                                {% if person['twitter'] != "None" %}
                                <a href={{ person.twitter }}><i class="fa fa-twitter"></i></a>
                                {% endif %}
                                {% if person['linkedin'] != "None" %}
                                <a href={{ person.linkedin }}><i class="fa fa-linkedin"></i></a>
                                {% endif %}
                                {% if person['github'] != "None" %}
                                <a href={{ person['github'] }}><i class="fa fa-github"></i></a>
                                {% endif %}
                                {% if person['orcid'] != "None" %}
                                <a href={{ "https://orcid.org/" ~person['orcid'] }}><i class="fa fa-id-card-o"></i></a>
                                {% endif %}
                                <p><button></button></p>
                            </div>
                        </div>
                        {% else %}
                        {# do nothing if end_year is not None #}
                        {% endif %}
                        {% endfor %}
                        {% endfor %}
                    </div>
                </article>
            </div>
        </div>



        <!-- footer start -->
        <footer class="footer">
            <div class="footer_top">
                <div class="container">
                    <div class="row">
                        <div class="col-xl-4 col-md-6 col-lg-4">
                            <div class="footer_widget">
                                <div class="logo_footer">
                                    <a href="index.html">
                                        <img src="img/logo.png" alt="">
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-3 col-md-6 col-lg-3">
                            <div class="footer_widget">
                                <h3 class="footer_title">
                                    Address
                                </h3>
                                <ul style="padding-right: 40%;">
                                    <li>
                                        <h6 class="icon maps fa-map"> {{ general.address }}</h6>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-xl-3 col-md-6 col-lg-3">
                            <div class="footer_widget">
                                <h3 class="footer_title">
                                    Useful Links
                                </h3>
                                <ul>
                                    {% for link_text, link_url in general.useful_link.items() %}
                                    <li><a href="{{ link_url }}" target="_blank">{{ link_text }}</a></li>
                                    {% endfor %}
                                </ul>
                            </div>
                        </div>
                        <div class="col-xl-2 col-md-6 col-lg-2">
                            <div class="footer_widget">
                                <h3 class="footer_title">
                                    Social Links
                                </h3>
                                <ul>
                                    {% for platform, link in general.social_media_links.items() %}
                                    <li><a href="{{ link }}">{{ platform }}</a></li>
                                    {% endfor %}
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="copy-right_text">
                <div class="container">
                    <div class="row">
                        <div class="col-xl-12">
                            <p class="copy_right text-center">
                                {{ general.footer_message }}
                                <script>document.write(new Date().getFullYear());</script>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
        <!--footer end-->
        <!-- Scripts -->
        <script src="assets/js/jquery.min.js"></script>
        <script src="assets/js/jquery.dropotron.min.js"></script>
        <script src="assets/js/browser.min.js"></script>
        <script src="assets/js/breakpoints.min.js"></script>
        <script src="assets/js/util.js"></script>
        <script src="assets/js/main.js"></script>
    </div>
</body>
</html>