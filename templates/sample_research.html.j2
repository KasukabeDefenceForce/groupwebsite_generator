<!DOCTYPE html>
<html>
<head>
    <style>
        .project-container {
            padding: 2rem 0;
        }
        
        .project-level-1 {
            font-size: 2.5rem;
            font-weight: 700;
            color: #333;
            margin-bottom: 1.5rem;
        }
        
        .project-level-2 {
            font-size: 2rem;
            font-weight: 600;
            color: #444;
            margin: 2rem 0 1rem;
        }
        
        .project-level-3 {
            font-size: 1.5rem;
            font-weight: 500;
            color: #555;
            margin: 1.5rem 0 1rem;
        }
        
        .project-description {
            font-size: 1.1rem;
            line-height: 1.6;
            color: #666;
            margin-bottom: 2rem;
        }
        
        .cards-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 2rem;
            margin-top: 2rem;
        }
        
        .project-card {
            border: 1px solid #eee;
            border-radius: 8px;
            overflow: hidden;
            transition: transform 0.2s, box-shadow 0.2s;
            background: white;
        }
        
        .project-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }
        
        .card-image {
            width: 100%;
            height: 200px;
            object-fit: cover;
            background: #f5f5f5;
        }
        
        .card-content {
            padding: 1.5rem;
        }
        
        .card-title {
            font-size: 1.25rem;
            font-weight: 600;
            color: #333;
            margin-bottom: 1rem;
        }
        
        .card-description {
            font-size: 1rem;
            color: #666;
            line-height: 1.5;
        }
    </style>
</head>
<body>
    <div class="project-container">
        {% macro render_project(project, level=1) %}
            {# Render project title with appropriate heading level #}
            <h{{ level }} class="project-level-{{ level }}">
                <a href="sub_research/{{ project.project_id|default(project.title|slugify) }}.html" class="heading">
                    {{ project.title }}
                </a>
            </h{{ level }}>
            
            {# Render project description if it exists #}
            {% if project.description %}
                {% for para in project.description %}
                    <p class="project-description">{{ para }}</p>
                {% endfor %}
            {% endif %}
            
            {% if project.sub_projects %}
                {% if not has_nested_projects(project.sub_projects) %}
                    {# Render cards if this is the lowest level with sub-projects #}
                    <div class="cards-container">
                        {% for sub in project.sub_projects %}
                            <div class="project-card">
                                {% if sub.cover_image %}
                                    <img src="{{ sub.cover_image }}" alt="{{ sub.title }}" class="card-image">
                                {% endif %}
                                <div class="card-content">
                                    <h3 class="card-title">{{ sub.title }}</h3>
                                    {% if sub.description %}
                                        <div class="card-description">
                                            {{ sub.description[0]|truncate(150) }}
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% else %}
                    {# Continue rendering nested projects #}
                    {% for sub in project.sub_projects %}
                        {{ render_project(sub, level + 1) }}
                    {% endfor %}
                {% endif %}
            {% endif %}
        {% endmacro %}

        {# Helper function to check if there are nested sub-projects #}
        {% macro has_nested_projects(projects) %}
            {% for project in projects %}
                {% if project.sub_projects %}
                    {{ true }}
                {% endif %}
            {% endfor %}
            {{ false }}
        {% endmacro %}

        {# Render all top-level projects #}
        {% for project in projects %}
            {{ render_project(project) }}
        {% endfor %}
    </div>
</body>
</html>