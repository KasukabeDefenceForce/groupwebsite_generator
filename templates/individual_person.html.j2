<html>
<head>
    <title> {{ general.website_title }} </title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
    <link rel="stylesheet" href="../../assets/css/main.css" />
    <link rel="stylesheet" href="../../assets/css/card.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
    <link rel="stylesheet" href="../../assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="../../assets/css/style.css">
    <link rel="stylesheet" href="../../assets/css/carousell.css">
    <style>
        table,
        td {
            border: none;
            padding: 20px;
            max-width: 50%;
            min-width: 100px;
            word-wrap: break-word;
        }

        .two {
            display: inline-block;
            margin-right: 50px;
            margin-left: 100px;
            vertical-align: top;
        }

        @media only screen and (max-width: 767px) {
            .two {
                margin-left: 5px;
            }
        }

        .click_button {
            display: inline-block;
            padding: 15px 25px;
            font-size: 24px;
            cursor: pointer;
            text-align: center;
            text-decoration: none;
            outline: none;
            color: #fff;
            background-color: #4CAF50;
            border: none;
            border-radius: 15px;
            box-shadow: 0 9px #999;
            max-width: fit-content;
        }

        .click_button:hover {
            background-color: #3e8e41
        }

        .click_button:active {
            background-color: #3e8e41;
            box-shadow: 0 5px #666;
            transform: translateY(4px);
        }

        .click_button span {
            cursor: pointer;
            display: inline-block;
            position: relative;
            transition: 0.5s;
        }

        .click_button span:after {
            content: '\00bb';
            position: absolute;
            opacity: 0;
            top: 0;
            right: -20px;
            transition: 0.5s;
        }

        .click_button:hover span {
            padding-right: 25px;
        }

        .click_button:hover span:after {
            opacity: 1;
            right: 0;
        }
    </style>
</head>
<body class="right-sidebar is-preload">
    <div id="page-wrapper">
        <!-- Header -->
        <div id="header-wrapper">
            <div id="header" class="container">
                <!-- Nav -->
                <nav id="nav">
                    <ul>
                        <li>
                            {% for page in general["navigation_bar"] %}
                        <li>
                            <a href="../../{{ page_link(page) }}.html">{{ page }}</a>
                            {% if page in general %}
                            <ul>
                                {% for sub_page in general[page] %}
                                <li><a href="../../sub_research/{{ page_link(sub_page) }}.html">{{sub_page}}</a></li>
                                {% endfor %}
                            </ul>
                            {% endif %}
                        </li>
                        {% endfor %}
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
    <!-- Features 1 -->
    <div class="wrapper" style="background-color: #e4ebf5;">
        <div class="container" id="main">
            <div class="row gtr-150">
                <div>
                    <section class="content">
                        <div class="image-wrapper" style="width:35%; margin:auto;">
                            <section>
                                <a href="#" class="image featured"><img src="{{ person.image_path }}" alt="" /></a>
                            </section>
                        </div>
                        <header>
                            <h2 style="text-align: center;"> {{ person.name }} </h2>
                        </header>
                        <h4> About Me:</h4>
                        <p> {{ person.introduction }}</p>


                        <table>
                            <tr>
                                <td>Project Title:</td>
                                <td>{{ person.project_title }}</td>
                            </tr>
                            <tr>
                                <td>Organization:</td>
                                <td>{{ person.org }}</td>
                            </tr>
                            <tr>
                                <td>Category:</td>
                                <td>{{ person.category }}</td>
                            </tr>
                            <tr>
                                <td>Current Role:</td>
                                <td>{{ person.current_role }}</td>
                            </tr>
                            <tr>
                                <td>Current Institute:</td>
                                <td>{{ person.current_institute }}</td>
                            </tr>
                            <tr>
                                <td>Duration:</td>
                                <td>{{ person.group_start_year }}-{{ person.group_end_year }}</td>
                            </tr>

                        </table>
                    </section>

                </div>
            </div>
        </div>





        <ul class="social-icons" style="margin-left: auto;">
            {% if person['social_media']['website'] != "" %}
            <li><a href="{{person.social_media.website}}"><i class="fa fa-globe"></i></a></li>
            {% endif %}
            {% if person['social_media']['github'] != "" %}
            <li><a href="{{person.social_media.github}}"><i class="fab fa-github"></i></a></li>
            {% endif %}
            {% if person['social_media']['twitter'] != "" %}
            <li><a href="{{person.social_media.twitter}}"><i class="fab fa-twitter"></i></a></li>
            {% endif %}
            {% if person['social_media']['linkedin'] != "" %}
            <li><a href="{{person.social_media.linkedin}}"><i class="fab fa-linkedin"></i></a></li>
            {% endif %}
            {% if person['social_media']['email'] != "" %}
            <li><a href="{{person.social_media.email}}"><i class="fa fa-envelope"></i></a></li>
            {% endif %}
            {% if person['social_media']['orcid'] != "" %}
            <li><a href="{{person.social_media.orcid}}"><i class="fa fa-link"></i></a></li>
            {% endif %}
        </ul>

        {% if 'curriculum_vitae' in person %}
        <div style="text-align:center; padding-top:5%;">
            <a href="{{person.curriculum_vitae}}" target="_blank">
                <button class="click_button"><span>Download CV</span></button>
            </a>
        </div>
        {% endif %}



        {% if 'posters' in person %}
        <h2 style="text-align:center; padding-top:5%;">Posters</h2>
        <div class="slider">
            {% for poster in person.posters.values() %}
            <div class="mySlides">

                <h3 style="text-align: center;">{{ poster.title }}</h3>
                <iframe src="{{ poster.link }}" style="width:100%"></iframe>
                <p style="text-align:center; "><b style="color: black;"><i>{{ poster.caption }}</i></b></p>
                <p style="text-align:center; ">{{ poster.about }}</p>
            </div>
            {% endfor %}
            <a class="prev" onclick="plusSlides(-1)">❮</a>
            <a class="next" onclick="plusSlides(1)">❯</a>
        </div>
        {% endif %}



        <!-- Table of details-->
        <div style="display: flex; padding-top:5%">
            <div style="margin-right: 50px;">
                {% for data in [ "education", "experience", "projects", "books", "documents", "awards", "outreach" ]
                %}
                {% if data in person %}

                {% for key, value in person[data].items() %}
                 {% if key == "section" and value %}
                <div class="two">
                    <h2>{{ value }}</h2>

                    <table>
                        <thead>
                            <tr>
                                {% for key, value in person[data].headings.items() %}

                                <th><b>{{ value }}</b></th>

                                {% endfor %}
                            </tr>
                        </thead>
                        <tbody>
                            {% for key, value in person[data].items() %}
                            {% if key != "headings" and key != "section" %}
                            <tr>
                                {% for k, v in value.items() %}
                                <td>{{ v }}</td>
                                {% endfor %}
                            </tr>
                            {% endif %}
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                {% endif %}
                {% endfor %}
                {% endif %}
                {% endfor %}
            </div>
        </div>


        <!-- End Table of details-->


    </div>

    <!-- footer start -->
    <footer class="footer">
        <div class="footer_top">
            <div class="container">
                <div class="row">
                    <div class="col-xl-4 col-md-6 col-lg-4">
                        <div class="footer_widget">
                            <div class="logo_footer">
                                <a href="index.html">
                                    <img src="img/logo.png" alt="">
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-3 col-md-6 col-lg-3">
                        <div class="footer_widget">
                            <h3 class="footer_title">
                                Address
                            </h3>
                            <ul style="padding-right: 40%;">
                                <li>
                                    <h6 class="icon maps fa-map"> {{ general.address }}</h6>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-xl-3 col-md-6 col-lg-3">
                        <div class="footer_widget">
                            <h3 class="footer_title">
                                Useful Links
                            </h3>
                            <ul>
                                {% for link_text, link_url in general.useful_link.items() %}
                                <li><a href="{{ link_url }}" target="_blank">{{ link_text }}</a></li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                    <div class="col-xl-2 col-md-6 col-lg-2">
                        <div class="footer_widget">
                            <h3 class="footer_title">
                                Social Links
                            </h3>
                            <ul>
                                {% for platform, link in general.social_media_links.items() %}
                                <li><a href="{{ link }}">{{ platform }}</a></li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="copy-right_text">
            <div class="container">
                <div class="row">
                    <div class="col-xl-12">
                        <p class="copy_right text-center">
                            {{ general.footer_message }}
                            <script>document.write(new Date().getFullYear());</script>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <!--footer end-->
    <!-- Scripts -->
    <script src="../../assets/js/jquery.min.js"></script>
    <script src="../../assets/js/jquery.dropotron.min.js"></script>
    <script src="../../assets/js/browser.min.js"></script>
    <script src="../../assets/js/breakpoints.min.js"></script>
    <script src="../../assets/js/util.js"></script>
    <script src="../../assets/js/main.js"></script>
    <script src="../../assets/js/carousell.js"></script>

</body>
</html>