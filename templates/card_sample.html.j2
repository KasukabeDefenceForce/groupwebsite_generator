                <div class="container py-lg-5 py-md-4 py-2">
                    <div class="row">
                    {% if item.sub-projects %}
                        {% set counter = 0 %}
                        {% for sub_project in item.sub_projects %}
                        {% if counter < 3 %} 
                        <div class="col-lg-4 col-md-6 item">
                            <div class="card">
                                <div class="card-header p-0 position-relative">
                                    <a href="sub_research/{{ sub_project.project_id|replace(' ', '_')|lower }}/{{ sub_project.project_id|lower }}.html"
                                        class="zoom d-block">
                                        <img style="max-width: 380px; max-height: 230px;" class="card-img-bottom d-block"
                                            src="{{ sub_project.cover_image }}" alt="array">
                                    </a>
                                    <div class="date">
                                         <p>{{ writeup["date"].strftime('%d') }}{% if writeup["date"].day % 10 == 1 and writeup["date"].day != 11 %}st{% elif writeup["date"].day % 10 == 2 and writeup["date"].day != 12 %}nd{% elif writeup["date"].day % 10 == 3 and writeup["date"].day != 13 %}rd{% else %}th{% endif %} {{ writeup["date"].strftime('%b, %Y') }}</p>
                                    </div>
                                </div>
                                <div class="card-body blog-details" style="max-height: 220px">
                                    <div class="heading">
                                        <a
                                            href="sub_research/{{ category|replace(' ', '_')|lower }}/{{ writeup['article_id']|lower }}.html">
                                            <h5 class="mb-3"
                                                style="height: 50px; overflow: hidden; display: flex; align-items: center; text-overflow: ellipsis; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; ">

                                                {{ writeup.title }}
                                            </h5>
                                        </a>

                                    </div>
                                    <hr style="border-top: 1px dotted rgba(143, 143, 143);">
                                    <div class="price-review mb-1 align-items-center" style="height: 80px;">

                                        <p
                                            style="overflow: hidden; text-overflow: ellipsis; display: -webkit-box; -webkit-line-clamp: 3; -webkit-box-orient: vertical;">
                                            {{ writeup.short_description }}
                                        </p>

                                    </div>

                                </div>
                            <div class="card-footer">
                            {% set author_id = writeup.author_id %}
                                {% if author_id %}
                                    {% set member = current_members | selectattr("id", "equalto", author_id) | list | first %}
                                    {% if member %}
                                        {% set author_name = member['full_name'] %}
                                        <div class="author align-items-center">
                                            <a href="members/{{ member['id'] }}/{{ member['id'] }}.html" class="post-author" target="_blank">
                                                <img src="members/{{ member['id'] }}/{{ member['image_path'] }}" alt="Author's Image" class="img-fluid rounded-circle">
                                            </a>
                                            <ul class="blog-meta">
                                                <li>
                                                    <span class="meta-value">Article by </span>
                                                    <a href="members/{{ member['id'] }}/{{ member['id'] }}.html" target="_blank">{{ author_name }}</a>
                                                </li>
                                            </ul>
                                        </div>
                                    {% endif %}
                                {% endif %}
                            </div>

                        </div>
                        {%endif%}
                        {% endfor %}
                        {% set counter = counter + 1 %}
                    {% endif %}
                    </div>
                </div>